{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "assets": ["src/assets/index"],
      "assets/*": ["src/assets/*"],
      "gate": ["src/gate/index"],
      "gate/*": ["src/gate/*"],
      "helpers": ["src/helpers/index"],
      "helpers/*": ["src/helpers/*"],
      "hooks": ["src/view/hooks/index"],
      "hooks/*": ["src/view/hooks/*"],
      "routes": ["src/routes/index"],
      "routes/*": ["src/routes/*"],
      "store": ["src/store/index"],
      "store/*": ["src/store/*"],
      "view": ["src/viewindex*"],
      "view/*": ["src/view/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
